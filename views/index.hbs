{{else}}
<div class="text-center imagenFondo">
    <div class="formLogin">
      <div class="blur">
    <form class="form-signin" action="/login" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión para continuar</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="text" class="form-control" placeholder="Usuario" required="" autofocus="" name="user" autocomplete="off">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control" placeholder="Contraseña" required="" name="pass" autocomplete="off">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar sesión</button>
        <button type="button" class="btn btn-lg btn-default btn-block" data-toggle="modal" data-target="#modalCrearUsuario">Crear usuario</button>
